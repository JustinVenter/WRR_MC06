            <Label id="DebtLabel" layoutX="134.0" layoutY="224.0" text="Debt:" textFill="WHITE">
               <font>
                  <Font name="Constantia" size="18.0" />
               </font>
            </Label>
            <Label id="TransactionsLabel" layoutX="43.0" layoutY="398.0" text="Transactions for the past 4 weeks:" textFill="#ffc6c6">

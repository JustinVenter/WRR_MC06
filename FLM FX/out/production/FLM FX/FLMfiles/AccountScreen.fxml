               <font>
                  <Font name="Constantia" size="17.0" />
               </font>
            </Button>
            <Circle fill="WHITE" layoutX="120.0" layoutY="204.0" radius="7.0" stroke="BLACK" strokeType="INSIDE" />
            <Circle fill="WHITE" layoutX="120.0" layoutY="236.0" radius="7.0" stroke="BLACK" strokeType="INSIDE" />
            <Label id="DebtNote" layoutX="174.0" layoutY="249.0" text="(This amount reflects the total of all salaries that have not been paid in the past)" textFill="WHITE">
